<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
        <servlet>
            <servlet-name>Hello</servlet-name>
            <servlet-class>com.ZhaoShiyang.week2.HelloWorldServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>Hello</servlet-name>
            <url-pattern>/hello</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>LifeCycle</servlet-name>
            <servlet-class>com.ZhaoShiyang.week3.demo.LifeCycleServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>LifeCycle</servlet-name>
            <url-pattern>/life</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>Register</servlet-name>
            <servlet-class>com.ZhaoShiyang.week3.demo.RegisterServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>Register</servlet-name>
            <url-pattern>/register</url-pattern>
        </servlet-mapping>


        <servlet>
            <servlet-name>JDBCDemo</servlet-name>
            <servlet-class>com.ZhaoShiyang.week4.demo.JDBCDemoServlet</servlet-class>
            <load-on-startup>1</load-on-startup>
        </servlet>
        <servlet-mapping>
            <servlet-name>JDBCDemo</servlet-name>
            <url-pattern>/jdbc</url-pattern>
        </servlet-mapping>
</web-app>